{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2018",
    "jsx": "preserve",
    "experimentalDecorators": false,
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "watch": true,
    "paths": {
      "*": [
        "src/*"
      ],
      "@reactory/core-plugin/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "config",
    "scripts"
  ],
  "include": [
    "src/**/*.ts",    
    "src/**/*.tsx",
    "src/types/**/*.d.ts"
  ]
}